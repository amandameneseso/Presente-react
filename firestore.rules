rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para usuários autenticados acessarem seus próprios dados
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para acesso público aos presentes compartilhados
    match /sharedGifts/{giftId} {
      // Qualquer pessoa pode ler um presente compartilhado ativo
      allow read: if resource.data.isActive == true;
      
      // Apenas o proprietário pode criar, atualizar ou excluir
      allow write: if request.auth != null && request.auth.uid == resource.data.userId || request.resource.data.userId == request.auth.uid;
    }
    
    // Regra padrão - nega tudo que não foi explicitamente permitido
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
